<div class="card" style='border: 0;'>
  <div style='width: 100vw; height: calc(100vh - 300px - 120px); over-flow: hide;'>
    <%= image_tag @article.image_url, style: "width: 100%; height: 100%; object-fit: cover; object-position: 50% 40%;", alt: "Responsive image"%>
  </div>
  <div class="card-img-overlay">
    <div class="h-75 d-flex flex-column justify-content-end align-items-start">
      <h4 class="card-text" style="color: #FA6000"><%= @article.title %></h4>
      <p class="card-text text-white font-weight-bolder text-center"><%= @article.text %></p>
    </div>
  </div>
</div>


<div class="card-group">
  <% @categories.each do | category | %>
    <div class="card" style='border: 0;'>
      <div class='card-image' style='width: 464px; height: 300px; over-flow: hide;'>
        <%= image_tag category.articles.first_article.image_url, class: 'h-100 w-100', style: 'object-fit: cover;'  %>
      </div>
      <div class="card-img-overlay">
        <h4 class="card-title">
          <%= link_to category.name, category_path(category.id), class: 'card-link text-white' %>
        </h4>
        <div class="h-75 d-flex justify-content-center align-items-end">
          <p class="card-text text-white font-weight-bolder text-center"><%= category.articles.first_article.title %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>