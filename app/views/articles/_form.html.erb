<%= simple_form_for @article, url: articles_path do |f| %>
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :text, :as => :text, :input_html => { 'rows' => 5, 'cols' => 10 } %>
  <%= f.input :image, as: :file %>
  <%= f.input :categories, as: :radio_buttons, collection: @categories %>
  <%= f.button :submit, class: "btn-primary" %>
  <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
<% end %>